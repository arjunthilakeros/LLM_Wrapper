# ===========================================
# Terminal Chatbot Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# OpenAI API Configuration (REQUIRED)
OPENAI_API_KEY=sk-your-api-key-here

# Environment (development, staging, production)
ENVIRONMENT=development

# User ID (optional, auto-generated if not set)
# USER_ID=my_user_id

# ===========================================
# Database Configuration
# ===========================================
# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# Use database instead of JSON files (true/false)
DATABASE_ENABLED=true

# ===========================================
# S3 Storage Configuration
# ===========================================
# S3-compatible storage endpoint
S3_ENDPOINT=https://your-s3-endpoint.com

# S3 credentials
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key

# S3 bucket name
S3_BUCKET=your-bucket-name

# Pre-signed URL expiration (seconds)
S3_URL_EXPIRATION=86400

# Enable S3 storage (true/false)
S3_ENABLED=false

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_DIR=./logs

# ===========================================
# Application Settings
# ===========================================
# Rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=10

# Cost limit per session (USD)
COST_LIMIT_PER_SESSION=5.0

# Warning threshold for cost (USD)
WARN_AT_COST=1.0

# API timeout (seconds)
API_TIMEOUT=30

# Maximum retries for API calls
API_MAX_RETRIES=3
